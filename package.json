{
	"name": "throxy-interview",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"hono": "^4.8.2",
			"@trpc/server": "^11.7.2",
			"@trpc/client": "^11.7.2"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @throxy-interview/db db:push",
		"db:studio": "turbo -F @throxy-interview/db db:studio",
		"db:generate": "turbo -F @throxy-interview/db db:generate",
		"db:migrate": "turbo -F @throxy-interview/db db:migrate",
		"check": "biome check --write ."
	},
	"dependencies": {
		"@throxy-interview/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@throxy-interview/config": "workspace:*",
		"@types/bun": "catalog:",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.8"
}
